                                                                                    id="<%= data.id %>"
                                                                                    name="<%= data.name %>"
                                                                                    placeholder=" <%= data.placeholder  %>"
                                                                                    <% if (typeof data.data_type
                                                                                    !=="undefined" ) {%>

